<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Achieve_Chap1Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/before_test"
        android:text="@string/before_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="12dp"
        android:paddingLeft="18dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/backwithborder2"
        android:textStyle="bold"
        android:textSize="18sp" />

            <TextView
                android:id="@+id/score_before"
                android:text="0/10"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/point1"
                android:layout_below="@+id/before_test"
                android:text="@string/point1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="-5dp"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp" />

            <RatingBar
                android:layout_below="@id/before_test"
                android:layout_alignParentRight="true"
                android:id="@+id/star"
                android:stepSize="1"
                android:rating="1"
                android:numStars="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/point2"
                android:layout_below="@id/point1"
                android:text="@string/point2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/backwithborder2"
                android:textStyle="bold"
                android:textSize="18sp" />

            <RatingBar
                android:layout_below="@id/point1"
                android:layout_alignParentRight="true"
                android:id="@+id/star2"
                android:stepSize="1"
                android:numStars="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/point3"
                android:layout_below="@+id/point2"
                android:text="@string/point3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <RatingBar
                android:layout_below="@id/point2"
                android:layout_alignParentRight="true"
                android:id="@+id/star3"
                android:stepSize="1"
                android:numStars="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/after_test"
                android:layout_below="@+id/point3"
                android:text="@string/after_test"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/backwithborder2"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/score_after"
                android:text="0/10"
                android:layout_below="@id/point3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="12dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>